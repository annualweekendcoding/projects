<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="top">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="fill_horizontal">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ein"
                android:id="@+id/onButton" android:longClickable="false" android:onClick="onButtonClick"
                android:layout_gravity="left|top" android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Aus"
                android:id="@+id/offButton" android:onClick="offButtonClick"
                android:layout_gravity="center_horizontal|top" android:layout_weight="1"
                />
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Toggle"
                android:id="@+id/toggleButton" android:layout_gravity="center_horizontal|top"
                android:onClick="toggleButtonClick" android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Flash"
                android:id="@+id/flashButton" android:layout_gravity="center_horizontal|top"
                android:onClick="flashButtonClick" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" android:fillViewport="false"
                android:layout_gravity="right|center_vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

